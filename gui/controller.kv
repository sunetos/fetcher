#:kivy 1.4.2
#:import state_cols main.state_cols
#:import font_awesome_path main.font_awesome_path
#:import font_icons main.font_icons

[IconButton@Button]:
    font_size: 10
    size_hint_x: 0.5 if 'text' in ctx else None
    width: 100 if 'text' in ctx else 20
    border: 0, 0, 0, 0
    background_color: 0, 0, 0, 0
    font_name: font_awesome_path
    color: 1, 1, 1, 1
    markup: True
    text: '%s [font=DroidSans]%s[/font]' % (ctx.icon, ctx.text) if 'text' in ctx else ctx.icon
    opacity: ctx.get('opacity', 1.0)

Controller:
    downloads: downloads

    canvas:
        Color:
            rgba: (0, 0, 0)

    StackLayout:
        id: downloads
        orientation: 'lr-tb'
        padding: 0
        spacing: 5

<DownloadRow>:
    id: download
    orientation: 'horizontal'
    size_hint_y: None
    height: 20
    spacing: 5

    name: '(file name here)'
    state: 'pending'
    status: 'waiting...'
    ratio: 0.0
    path: ''

    canvas:
        Color:
            hsv: state_cols.get(download.state, state_cols['pending']).bg
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            hsv: state_cols.get(download.state, state_cols['pending']).fg
        Rectangle:
            pos: self.pos
            size: self.size[0]*min(self.ratio, 1.0), self.size[1]

    Label:
        halign: 'left'
        valign: 'middle'
        id: lbl_name
        font_size: 10
        text: ' ' + download.name
        text_size: self.size  # Required for halign to work correctly

<LocalDownloadRow>:
    browse: btn_browse
    play: btn_play
    close: btn_close

    IconButton:
        id: btn_browse
        icon: font_icons['folder-open']

    IconButton:
        id: btn_play
        icon: font_icons['play']

    IconButton:
        id: btn_close
        icon: font_icons['remove']
        opacity: 0.25
